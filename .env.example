# Variables de entorno para GProA - Capacitación Bancos y Aseguradoras
# Copia este archivo a .env y configura los valores

# ============================================
# CONFIGURACIÓN DEL FRONTEND
# ============================================
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gproa_database
DB_USER=gproa_user
DB_PASSWORD=gproa_password

# ============================================
# CONFIGURACIÓN DE CACHE (Redis)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# CONFIGURACIÓN DE OPENAI (Para IA/RAG)
# ============================================
OPENAI_API_KEY=tu-api-key-de-openai-aqui
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS VECTORIAL
# ============================================
PINECONE_API_KEY=tu-api-key-de-pinecone
PINECONE_ENVIRONMENT=us-east1-aws
PINECONE_INDEX_NAME=gproa-knowledge

# ============================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================
JWT_SECRET=tu-jwt-secret-muy-seguro-aqui
JWT_EXPIRATION=24h

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=tu-email@example.com
SMTP_PASSWORD=tu-password-de-email
